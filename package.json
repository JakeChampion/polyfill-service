{
  "name": "polyfill-service",
  "description": "A polyfill combinator",
  "private": true,
  "contributors": [
    {
      "name": "FT Origami",
      "email": "origami.support@ft.com",
      "url": "https://origami.ft.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/financial-times/polyfill-service.git"
  },
  "bugs": {
    "url": "https://github.com/financial-times/polyfill-service/issues"
  },
  "scripts": {
    "toppops": "bash .github/workflows/toppops.sh",
    "fmt": "terraform fmt fastly/terraform/ && eslint . --fix",
    "lint": "eslint .",
    "clean": "rimraf ./dist ./.cache",
    "build": "run-s clean eleventy build:*",
    "build:app": "js-compute-runtime app/index.js",
    "build:sass": "mkdir -p dist/css && sass src/assets/css/index.scss  --style=compressed --load-path=node_modules --load-path=node_modules/@financial-times | postcss --use autoprefixer --output dist/css/index.css --map",
    "build:js": "mkdir -p dist/js && esbuild src/assets/js/index.js --bundle --minify > dist/js/index.min.js",
    "dev": "npm run clean && nodemon --exec \"npm run build && npm run start\"",
    "eleventy": "eleventy --config .eleventy.js",
    "start": "fastly compute serve",
    "test": "NODE_ENV='production' start-test start 'http://127.0.0.1:7676' test:integration",
    "test:integration": "mocha test/integration/*.test.js test/integration/**/*.test.js --recursive --check-leaks --timeout 60000 --exit --bail",
    "postinstall": "patch-package"
  },
  "license": "MIT",
  "dependencies": {
    "@fastly/js-compute": "^1.0.1",
    "@financial-times/polyfill-useragent-normaliser": "^1.10.2",
    "@jakechampion/c-at-e-file-server": "^0.0.2-main",
    "hono": "^2.2.1",
    "mnemonist": "^0.38.5",
    "toposort": "^2.0.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@financial-times/o-buttons": "^7.5.0",
    "@financial-times/o-fonts": "^5.3.0",
    "@financial-times/o-footer-services": "^4.2.3",
    "@financial-times/o-forms": "^9.3.1",
    "@financial-times/o-header-services": "^5.2.2",
    "@financial-times/o-layout": "^5.2.2",
    "@financial-times/o-normalise": "^3.2.2",
    "@financial-times/o-spacing": "^3.2.1",
    "@financial-times/o-syntax-highlight": "^4.2.2",
    "@financial-times/o-table": "^9.2.4",
    "@financial-times/o-tabs": "^6.0.0",
    "@financial-times/o-tooltip": "^5.2.1",
    "autoprefixer": "^10.4.4",
    "axios": "^0.26.1",
    "browserslist": "^4.20.2",
    "eclint": "^2.8.1",
    "esbuild": "^0.14.32",
    "eslint": "^8.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "fast-glob": "^3.2.11",
    "lockspot": "0.1.1",
    "lodash": "^4.17.21",
    "mocha": "^9.2.2",
    "mockery": "^2.1.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "nyc": "^15.1.0",
    "patch-package": "^6.5.0",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "proclaim": "^3.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.11",
    "sinon": "^13.0.1",
    "start-server-and-test": "^1.15.2",
    "useragent": "^2.3.0"
  }
}
